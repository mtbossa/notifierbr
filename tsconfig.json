{
	"compilerOptions": {
		"target": "es2019",
		"lib": [
			"dom",
			"es2019",
			"es2020.bigint",
			"es2020.string",
			"es2020.symbol.wellknown"
		],
		"module": "commonjs",
		"rootDir": "./src",
		"allowJs": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	}
}
